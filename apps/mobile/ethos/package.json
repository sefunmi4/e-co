{
  "name": "@ethos/mobile",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "expo start --clear",
    "ios": "expo run:ios",
    "android": "expo run:android",
    "test": "jest"
  },
  "dependencies": {
    "@eco/js-sdk": "file:../../../sdks/js",
    "@expo/vector-icons": "^14.0.0",
    "@react-navigation/native": "^7.0.14",
    "@react-navigation/native-stack": "^7.0.15",
    "@tanstack/react-query": "^5.40.0",
    "expo": "~54.0.13",
    "expo-constants": "~18.0.9",
    "expo-secure-store": "~15.0.7",
    "expo-status-bar": "~3.0.8",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@types/jest": "^29.5.12",
    "@types/react": "^19.2.2",
    "@types/react-test-renderer": "19.1.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "dotenv": "^16.4.5",
    "babel-preset-expo": "^10.0.0",
    "jest": "^29.7.0",
    "jest-expo": "^51.0.0",
    "react-test-renderer": "19.1.0",
    "typescript": "^5.4.5"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|react-clone-referenced-element|@react-navigation|expo|@expo|expo-modules-core|@unimodules|@tanstack|@eco)/)"
    ],
    "moduleNameMapper": {
      "^react-native/jest/mock(\\.js)?$": "<rootDir>/test/reactNativeJestMock.js"
    },
    "transform": {
      "^.+\\.[jt]sx?$": [
        "babel-jest",
        {
          "presets": ["babel-preset-expo"],
          "plugins": [
            [
              "module-resolver",
              {
                "extensions": [".ts", ".tsx", ".js", ".jsx", ".json"],
                "alias": {
                  "@": "./src"
                }
              }
            ],
            "react-native-reanimated/plugin"
          ]
        }
      ]
    }
  }
}
